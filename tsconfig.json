{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": false,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports":true
    },
    "include": [
        "./src/**/*"
    ]
}